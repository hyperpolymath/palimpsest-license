# Ensures consistent formatting across all tools, editors, and agents.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.adoc]
indent_size = 2
max_line_length = off

[*.scm]
indent_style = space
indent_size = 2

[*.md]
indent_size = 2

[*.rs]
indent_size = 4

[Makefile]
indent_style = tab
